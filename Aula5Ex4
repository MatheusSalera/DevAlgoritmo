#include <stdio.h>
#include <stdlib.h>

int main() {
    int numeros[15];
    int par = 0 ;
    int impar = 0 ;


    for (int i = 0; i < 15; i++) {
        printf("Digite o numero: ", i + 1);
        scanf("%d", &numeros[i]);
        
}

      for (int i = 0; i < 15; i++) {
        if (numeros[i] % 2 == 0) {
            par++ ;
        }
       else{
           impar++;
        }
    }

    printf("\n elementos pares: %d\n", par);
    printf("\n elementos impares: %d\n", impar);


	system("pause");
	return 0;
}
