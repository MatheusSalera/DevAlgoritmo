#include "numeros.h"


int eh_par(int n) {
    return (n % 2 == 0);
}


int eh_primo(int n) {
    int i;

    if (n <= 1) return 0;
    if (n == 2) return 1;
    if (n % 2 == 0) return 0;

    for (i = 3; i * i <= n; i += 2) {
        if (n % i == 0)
            return 0;
    }
    return 1;
}


unsigned long long fatorial(int n) {
    unsigned long long resultado = 1;
    int i;

    if (n < 0) return 0; 
    for (i = 2; i <= n; i++) {
        resultado *= i;
    }
    return resultado;
}


int maior(int a, int b) {
    if (a > b)
        return a;
    else
        return b;
}

int potencia(int base, int expoente) {
    int resultado = 1;
    int i;

    for (i = 0; i < expoente; i++) {
        resultado *= base;
    }
    return resultado;
}
