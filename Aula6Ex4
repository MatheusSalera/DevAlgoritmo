#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void formatar_nome(char *nome) {
    char *src = nome;   
    char *dst = nome;   
    int inicio_palavra = 1;

    while (*src && isspace((unsigned char)*src)) {
        src++;
    }

    while (*src) {
        if (isspace((unsigned char)*src)) {
         
            while (*src && isspace((unsigned char)*src)) {
                src++;
            }
            if (*src) {
                *dst++ = ' '; 
                inicio_palavra = 1;
            }
        } else {
            if (inicio_palavra) {
                *dst++ = toupper((unsigned char)*src);
                inicio_palavra = 0;
            } else {
                *dst++ = tolower((unsigned char)*src);
            }
            src++;
        }
    }

    *dst = '\0'; 
}

int main() {
    char nome[100] = " jOAO    sILVA DOS  santos ";
    formatar_nome(nome);
    printf("Formatado: \"%s\"\n", nome);

	system("pause");
	return 0;
}

