#include <stdio.h>
#include <stdlib.h>



int main() {
    int matriz[3][3];
    int i, j;
    int soma_diagonal = 0;

    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            printf("Digite o elemento da matriz: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    
    printf("\n Elementos da diagonal principal:\n");
    for (i = 0; i < 3; i++) {
        printf("%d ", matriz[i][i]);
        soma_diagonal += matriz[i][i];
    }

    printf("\n Soma dos elementos da diagonal principal: %d\n", soma_diagonal);


	system("pause");
	return 0;
}
