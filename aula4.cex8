#include <stdio.h>

int main() {
    int linhas;
    int i, j; 

    printf("Digite o numero de linhas do triangulo: ");
    scanf("%d", &linhas);

    for (i = 1; i <= linhas; i++) {
        for (j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }


    system("pause");

    return 0;
}
