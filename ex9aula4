#include <stdio.h>
#include <stdlib.h>

int main() {
    int num;
    int soma = 0;
    int count = 0;

    printf("Digite numeros entre 1 e 100. Digite 0 para sair.\n");

    while (1) {

        do {
            printf("Digite um numero: ");
            scanf("%d", &num);

            if (num == 0) {

                break;
            }

            if (num < 1 || num > 100) {
                printf("Numero invalido! Digite um numero entre 1 e 100.\n");
            }

        } while (num < 1 || num > 100);

        if (num == 0) {
            break;
        }

        soma += num;
        count++;
    }

    if (count > 0) {
        double media = (double)soma / count;
        printf("Media dos numeros validos: %.2f\n", media);
    } else {
        printf("Nenhum numero valido foi inserido.\n");
    }

    system ("pause");
    return 0;
}
