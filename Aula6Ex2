#include <stdio.h>
#include <stdlib.h>
#include <string.h>
 


void inverte_string(char *str) {
    char *inicio = str;
    char *fim = str + strlen(str) - 1;

    while (inicio < fim) {

        char temp = *inicio;
        *inicio = *fim;
        *fim = temp;

        inicio++;
        fim--;
    }
}

int main() {
    char texto1[] = "hello";
    char texto2[] = "programacao";
    char texto3[] = "C linguagem";

    inverte_string(texto1);
    inverte_string(texto2);
    inverte_string(texto3);

    printf("Invertida: %s\n", texto1);
    printf("Invertida: %s\n", texto2);
    printf("Invertida: %s\n", texto3);

	system("pause");
	return 0;
}

