#include <stdio.h>
#include <stdlib.h>

int main() {
    int matriz1[2][2], matriz2[2][2];
    int i, j;
    int iguais = 1; 

    printf("Digite os elementos da primeira matriz 2x2:\n");
    for (i = 0; i < 2; i++) {
        for (j = 0; j < 2; j++) {
            printf("Elemento: ", i, j);
            scanf("%d", &matriz1[i][j]);
        }
    }

   
    printf("Digite os elementos da segunda matriz 2x2:\n");
    for (i = 0; i < 2; i++) {
        for (j = 0; j < 2; j++) {
            printf("Elemento: ", i, j);
            scanf("%d", &matriz2[i][j]);
        }
    }

   
    for (i = 0; i < 2 && iguais; i++) {
        for (j = 0; j < 2; j++) {
            if (matriz1[i][j] != matriz2[i][j]) {
                iguais = 0; 
                break;
            }
        }
    }

  
    if (iguais) {
        printf("Matrizes iguais \n");
    } else {
        printf("Matrizes diferentes \n");
    }

    system("pause");
    return 0;
}
