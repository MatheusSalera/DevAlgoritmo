#include <stdio.h>
#include <stdlib.h>



int main() {
    int matriz[4][4];
    int i , j ;


    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("Digite o elemento da matriz: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

   
    printf("\nMatriz 4x4:\n");
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("%d\t", matriz[i][j]);
        }
        printf("\n");  
    }
    

    for (i = 0; i < 4; i++) {
        int soma_linha = 0;
        for (j = 0; j < 4; j++) {
            soma_linha += matriz[i][j];
        }
        printf("Soma da linha %d: %d\n", i, soma_linha);
    }


    for (j = 0; j < 4; j++) {
        int soma_coluna = 0;
        for (i = 0; i < 4; i++) {
            soma_coluna += matriz[i][j];
        }
        printf("Soma da coluna %d: %d\n", j, soma_coluna);
    }

	system("pause");
	return 0;
}
