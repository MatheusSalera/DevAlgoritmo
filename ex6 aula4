#include <stdio.h>
#include <stdlib.h>


double potencia(double x, int n) {
    if (n == 0)         
        return 1;
    else if (n > 0)
        return x * potencia(x, n - 1);  
    else
        return 1 / potencia(x, -n);    
}

int main() {
    double base;
    int expoente;

    printf("Digite a base: ");
    scanf("%lf", &base);

    printf("Digite o expoente: ");
    scanf("%d", &expoente);

    double resultado = potencia(base, expoente);
    printf("%.4lf elevado a %d eh: %.4lf\n", base, expoente, resultado);

	system("pause");	
	return 0;
}
